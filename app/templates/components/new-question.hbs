{{#if displayNewForm}}
<h4>Add a New Question</h4>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Question</label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="notes">Additional Notes</label>
      {{input value=notes id="notes"}}
    </div>
    <button class="margin-bottom-10px" {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
  <button class="margin-bottom-10px" {{action 'addQuestionFormShow'}}>New Question</button>
{{/if}}
