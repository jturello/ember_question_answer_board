<div class="debug">question-detail.hbs</div>


<h3>Question detail page</h3>

<div class="row">
  <div class="col-sm-2">
    Author:
  </div>
  <div class="col-sm-10">
    {{question.author}}
  </div>
</div>
<div class="row">
  <div class="col-sm-2">
    Question:
  </div>
  <div class="col-sm-10">
    {{question.content}}
  </div>
</div>
<div class="row">
  <div class="col-sm-2">
    Notes:
  </div>
  <div class="col-sm-10">
    {{question.notes}}
  </div>
</div>

{{update-question question=question update="update"}}

<hr>

<h3> Answers: </h3>

<ul>
  {{#each question.answers as |answer|}}
    <li>{{answer.content}} - ({{answer.author}})</li>
  {{/each}}
</ul>

{{new-answer addAnswer="addAnswer" question=question}}
